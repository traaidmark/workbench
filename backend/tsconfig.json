{
  "compilerOptions": {
   "lib": [
      "es5",
      "es6"
   ],
   "target": "es6",
   "module": "commonjs",
   "esModuleInterop": true,
   "moduleResolution": "node",
   "rootDir": "./src",   
   "outDir": "./build",
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "sourceMap": true,
   "baseUrl": ".",
   "paths": {
      "@/*": ["src/*"]
   }
  }
}
